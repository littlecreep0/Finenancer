<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <ImageView
        android:id="@+id/portfolio_icon"
        android:layout_width="90dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/portfolio_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/portfolio_icon"
        android:textAlignment="viewStart"
        android:ellipsize="end"
        android:textSize="30sp"
        tools:text="Portfolio" />

    <TextView
        android:id="@+id/portfolio_assets_amount"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/portfolio_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/portfolio_icon"
        android:textAlignment="viewStart"
        android:ellipsize="end"
        android:textSize="12sp"
        tools:text="Assets in Portfolio: 123" />

</androidx.constraintlayout.widget.ConstraintLayout>